<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>UserAuthentication.UserLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>UserAuthentication.UserRegister</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>userFilter</filter-name>
        <filter-class>UserAuthentication.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>userFilter</filter-name>
        <url-pattern>/QuestionManagement/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>add2cart</servlet-name>
        <servlet-class>ExamComposition.addToCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add2cart</servlet-name>
        <url-pattern>/addToCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showAllCart</servlet-name>
        <servlet-class>ExamComposition.showCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showAllCart</servlet-name>
        <url-pattern>/showCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Test_1</servlet-name>
        <servlet-class>Test.addToCartTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Test_1</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteFromCart</servlet-name>
        <servlet-class>ExamComposition.deleteFromCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteFromCart</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
</web-app>